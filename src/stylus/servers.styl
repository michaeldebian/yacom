@import 'shared/base'
@import 'shared/ace'

#script-options

  .form-group

    .help-block
      max-height 0
      overflow-y hidden
      transition 0.4s max-height ease

    &.has-error

      .help-block
        max-height 20px

  #os-packages
    resize vertical

  #developer-packages
    height 200px

#script-info

  h2
    margin 20px 0

    &:first-child
      margin 10px 0

  #script-preview
    height 644px

  #ssh-key
    position relative

    textarea
      width 100%
      resize none
      border 0
      height 145px
      font-size 13px
      border-radius 5px
      border 1px solid #ccc !important
      padding 12px

    #ssh-key-copy-btn
      transition 0.3s opacity ease
      opacity 0
      position absolute
      bottom 18px
      right 13px
      cursor pointer

    &:hover #ssh-key-copy-btn
      opacity 1

&[data-server] #script-info #script-preview
  height 400px

